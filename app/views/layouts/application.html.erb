<!DOCTYPE html>
<html>
  <head>
    <title>MovieDb</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <% if user_signed_in? %>
        <nav class="navbar">
          <div class="nav-item">
            User: <%= current_user.name %>
            <%= link_to "| Logout", destroy_user_session_path, method: :delete, :class => 'nav-divnk'  %>
          </div>
        </nav>
      <% end %>
      <div id="notifications">
        <%= render "layouts/elements/flash_message" %>
      </div>
      <%= yield %>
    </div>
  </body>
</html>
