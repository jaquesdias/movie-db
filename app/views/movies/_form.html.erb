<h2>Movie</h2>
<%= form_for(@movie) do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :category_id, "Category" %>
    <%= f.select :category_id, @categories, { include_blank: 'Please select a category' }, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.submit "Save", class: "btn btn-primary btn-block align-form" %>
  </div>
<% end %>
