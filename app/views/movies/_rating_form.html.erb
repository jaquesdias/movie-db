<%= form_for(movie, remote: true, url: movie_rate_path(movie), method: :post, html: { class: 'rating_form' }) do |f| %>
  <div class="form-group col-lg-4">
    <%= f.label :ratings, 'Inform a number between 0-5' %>
    <%= f.number_field :ratings, value: '', class: "form-control" %>
  </div>

  <div class="form-group col-lg-4">
    <%= f.submit "Save", class: "btn btn-primary btn-block align-form" %>
  </div>
<% end %>
